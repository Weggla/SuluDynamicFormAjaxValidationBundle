{
  "name": "weggla/sulu-form-ajax-validation-bundle",
  "description": "A small bundle for Sulu projects to validate forms via ajax request",
  "type": "sulu-bundle",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Weggla",
      "email": "weggla@posteo.de"
    }
  ],
  "homepage": "https://github.com/Weggla/SuluFormAjaxValidationBundle",
  "keywords": [
    "sulu",
    "forms"
  ],
  "require": {
    "php": ">= 8.2",
    "jackalope/jackalope-doctrine-dbal": "^1.10 || ^2.0",
    "sulu/form-bundle": "^2.5",
    "sulu/sulu": "~2.6.3",
    "symfony/form": "^5.4 || ^6.0 || ^7.0",
    "symfony/http-foundation": "^5.4 || ^6.0 || ^7.0",
    "symfony/routing": "^7.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "Sulu\\Bundle\\FormAjaxValidation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Sulu\\Bundle\\FormAjaxValidation\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
